#!/bin/sh
# makewxmotif
# Configures and makes wxMotif from either the root wxWindows directory
# or a build directory underneath it.

CONFIG=./configure

if [ ! -f ./configure ]; then
  CONFIG=../configure
fi

CONFIG="$CONFIG --disable-shared --with-motif --enable-debug --enable-threads"

echo Invoking $CONFIG

rm -f *.cache
$CONFIG
make
